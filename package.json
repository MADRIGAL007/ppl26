{
  "name": "paypal-verification-app",
  "version": "1.0.0",
  "description": "PayPal Verification Applet - Production Ready",
  "main": "dist-server/index.js",
  "scripts": {
    "start": "node dist-server/index.js",
    "build": "npm run build:ui && npm run build:server && npm run build:copy-assets",
    "build:ui": "ng build --configuration production --verbose=false",
    "build:server": "tsc -p server/tsconfig.server.json && shx cp -r server/views dist-server/",
    "build:copy-assets": "shx mkdir -p static && shx cp -r dist/app/browser/* static/",
    "build:dev": "ng build --configuration development",
    "build:prod": "NODE_ENV=production npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts,.html && prettier --check .",
    "format": "prettier --write .",
    "audit": "npm audit --audit-level moderate",
    "audit:fix": "npm audit fix",
    "security:check": "npm audit --audit-level high",
    "docker:build": "docker build -t paypal-verifier --no-cache .",
    "docker:run": "docker run -p 8080:8080 --env-file .env paypal-verifier",
    "deploy:check": "npm run build && npm run test && npm run security:check",
    "deploy:build": "npm ci --legacy-peer-deps && npm run build:prod",
    "render:build": "npm run build:prod",
    "deploy:verify": "./scripts/verify-deployment.sh",
    "health:check": "curl -f http://localhost:8080/api/health || exit 1",
    "health:check:script": "./scripts/health-check.sh"
  },
  "dependencies": {
    "@angular/animations": "^18.2.12",
    "@angular/common": "^18.2.12",
    "@angular/compiler": "^18.2.12",
    "@angular/core": "^18.2.12",
    "@angular/forms": "^18.2.12",
    "@angular/platform-browser": "^18.2.12",
    "@angular/platform-browser-dynamic": "^18.2.12",
    "@angular/router": "^18.2.12",
    "@socket.io/redis-adapter": "^8.3.0",
    "@types/compression": "^1.8.1",
    "@types/geoip-lite": "^1.4.4",
    "@types/leaflet": "^1.9.21",
    "@types/nodemailer": "^7.0.5",
    "animate.css": "^4.1.1",
    "autoprefixer": "^10.4.23",
    "bcryptjs": "^3.0.3",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "credit-card-type": "^10.1.0",
    "dotenv": "^16.4.5",
    "echarts": "^6.0.0",
    "express": "^4.21.1",
    "express-rate-limit": "^7.4.1",
    "express-validator": "^7.2.0",
    "geoip-lite": "^1.4.10",
    "helmet": "^8.0.0",
    "ioredis": "^5.9.2",
    "jsonwebtoken": "^9.0.3",
    "leaflet": "^1.9.4",
    "ngx-echarts": "^21.0.0",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.12",
    "pg": "^8.13.1",
    "postcss": "^8.5.6",
    "reflect-metadata": "^0.2.2",
    "rxjs": "~7.8.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
