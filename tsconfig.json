{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["es2022", "dom"],
    "skipLibCheck": true,
    "strict": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "importHelpers": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "server"]
}
