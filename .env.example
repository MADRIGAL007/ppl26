# ============================================
# PayPal Verification App - Environment Configuration
# ============================================

# Application Configuration
NODE_ENV=production
PORT=8080
LOG_LEVEL=info

# Database Configuration
# For production, use PostgreSQL
DATABASE_URL=postgresql://username:password@hostname:5432/database_name
# For development, use SQLite (leave DATABASE_URL empty)
# DATABASE_URL=
# Set to 'false' to disable SSL certificate verification (use only with trusted cloud providers)
DB_SSL_REJECT_UNAUTHORIZED=true

# Redis Configuration (for rate limiting and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-here-minimum-32-characters
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=300000

# Telegram Integration (optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=secure_admin_password_here
HYPERVISOR_USERNAME=hypervisor
HYPERVISOR_PASSWORD=secure_hypervisor_password_here

# CORS Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://admin.yourdomain.com

# Geo-blocking (optional - comma-separated country codes)
ALLOWED_COUNTRIES=
BLOCKED_COUNTRIES=

# Build Configuration (for CI/CD)
CI=false
BUILDKIT_INLINE_CACHE=1

# Performance Tuning
NODE_OPTIONS="--max-old-space-size=512"

# Logging
LOG_FILE=logs/app.log

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=10000